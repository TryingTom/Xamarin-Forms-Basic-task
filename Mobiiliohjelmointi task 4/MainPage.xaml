<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobiiliohjelmointi_task_4.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Task 4 - Xamarin.Forms" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Label>Give name:</Label>
        <Entry x:Name="eName" Placeholder="Name"></Entry>

        <Label>Give adress:</Label>
        <Entry x:Name="eAddress" Placeholder="Address"></Entry>

        <Label>Give age:</Label>
        <Label x:Name="lAge">Age</Label>
        <Slider Maximum="100" x:Name="eAge" ValueChanged="OnSliderValueChanged" />
        

        <Button Text="Add to list" x:Name="SecondPageButton" Clicked="SecondPageButton_Clicked"></Button>
        
    </StackLayout>

</ContentPage>

    